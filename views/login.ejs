<%- include("header") -%>
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/darkmode.css">
    <link rel="stylesheet" href="/stylesheets/ps.css">
    <link rel="stylesheet" href="/stylesheets/inputs.css">
    </head>

    <body>
        <%- include("navbar") -%>

            <br>

            <%- include("flash") -%>
                <br>
                <h1>Login</h1>
                <form action="/login" method="POST">
                    <div class="form-group">
                        <i class="fas fa-user" style="color: gray;"></i>
                        <label for="usn">USN</label>
                        <input height="50" type="text" name="username" class="form-control" id="usn" placeholder="USN" minlength=10 maxlength=10 pattern="1[Mm][Ss][0-9]{2}[A-Za-z]{2}[0-9]{3}" required value="1MS">
                    </div>
                    <div class="cont form-group">
                        <i class="fas fa-lock" style="color: gray;"></i>
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="password">
                        <i class="fas fa-eye ps" id="togglePassword" style="color: gray;"></i>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">Login</button>
                </form>
                <br>
                <p>Do not have a account
                    <a href="/signup" class="btn btn-secondary btn-lg">Sign Up</a>
                </p>
                </div>
                <script type="text/javascript" src="/scripts/ps.js"></script>
                <%- include("footer") -%>